{
    "name": "sequra/woocommerce-sequracheckout",
    "description": "seQura Checkout for WooCommerce",
    "type": "wordpress-plugin",
    "require-dev": {
        "behat/behat": "*",
        "phpunit/phpunit": "*",
        "woocommerce/woocommerce-sniffs": "*",
        "phpmd/phpmd": "dev-master"
    },
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "seQura Engineering",
            "email": "dev@sequra.es"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "clean-testenv": "echo",
        "test": [
            "source tests/env_vars;tests/bin/install.sh $DB_NAME $DB_USER $DB_PASS $DB_HOST $WP_VERSION $SKIP_DB_CREATE $WC_VERSION",
            "./vendor/bin/phpunit"
        ],
        "dist": [
            "bash bin/build.sh"
        ],
        "dist-dev": [
            "bash bin/build-dev.sh"
        ],
        "release": [
            "bash bin/build.sh",
            "bash bin/release.sh"
        ],
        "phpcs": [
            "phpcs -s -p"
        ],
        "phpcs-pre-commit": [
            "phpcs -s -p -n"
        ],
        "phpcbf": [
            "phpcbf -p"
        ]
    },
    "extra": {
        "scripts-description": {
            "test": "Run all tests!",
            "dist": "Create plugin sequra-payment.zip to distribute",
            "release": "Create a release",
            "phpcs": "Analyze code against the WordPress coding standards with PHP_CodeSniffer",
            "phpcbf": "Fix coding standards warnings/errors automatically with PHP Code Beautifier"
        }
    },
    "require": {
        "sequra/php-client": "~0.3"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
