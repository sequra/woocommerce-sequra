{
    "name": "sequra/wc",
    "type": "project",
    "description": "seQura WordPress plugin",
    "authors": [
        {
            "name": "seQura Tech",
            "email": "wordpress@sequra.es"
        }
    ],
    "config": {
        "platform": {
            "php": "7.3.0"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "szepeviktor/phpstan-wordpress": true,
            "phpstan/extension-installer": true
        },
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "classmap-authoritative": true
    },
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SeQura\\Core\\Tests\\Infrastructure\\": "vendor/sequra/integration-core/tests/Infrastructure",
            "SeQura\\Core\\Tests\\BusinessLogic\\": "vendor/sequra/integration-core/tests/BusinessLogic"
        },
        "classmap": [
            "tests/Controllers/",
            "tests/Core/",
            "tests/Fixtures/",
            "tests/Repositories/",
            "tests/Services/"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": ">5.0",
        "yoast/phpunit-polyfills": "^1.0",
        "woocommerce/woocommerce-sniffs": "^1.0",
        "sirbrillig/phpcs-variable-analysis": "^2.11",
        "automattic/vipwpcs": "^3.0",
        "phpstan/phpstan": "^1.11",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "phpstan/extension-installer": "^1.3",
        "php-stubs/woocommerce-stubs": "^8.8"
    },
    "prefer-stable": true,
    "require": {
        "sequra/integration-core": "v3.0.0"
    }
}
